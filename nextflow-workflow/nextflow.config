// Example configuration for running on supercompute resource
// Make a local copy of this file and override it
process {
    executor = 'local'
    cache = 'lenient' // use lenient to ignore timestamps, resume is more reliable for shared file systems
    memory = '4 GB'
    cpus = 4

    withName: detect_objects {
        cpus = 16
        memory = '16 GB'
    }

    withName: link_objects {
        cpus = 16
        memory = '16 GB'
    }

    withName: save_tiff_data {
        cpus = 8
        memory = '32 GB'
    }
}